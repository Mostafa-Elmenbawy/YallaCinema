<div class="col-md-6 col-md-offset-3 ">

<div class="panel panel-primary" style="background-color:lavender;">
    <div class="panel-heading">Search Movies tonight</div>
      <div class="panel-body" >
      
        
          <%= form_tag("/search", method: "post") do %>

          <div class="row">
            <div class="col-sm-5" style="background-color:lavender;">
               <div class=" has-feedback">
                <%= label_tag(:region, "Region") %>
                <%= text_field_tag(:region, nil, class: "form-control") %>
                
            </div>
            </div>
            <div class="col-sm-5" style="background-color:lavender;">
              <div class=" has-feedback">
                <%= label_tag(:time, "Showtime:") %>
                <br/>
                <select id="time" name="time">
                <option value="10am">10:15 am</option>
                <option value="12pm">1:00 pm</option>
                <option value="3pm">3:45 pm</option>
                <option value="6pm">6:45 pm</option>
                <option value="9pm">9:45 pm</option>
                <option value="12am">12:45 am</option>
                </select>
               </div> 
            </div>   
          </div>

           
            <div> 
            <%= submit_tag("Search", class: "btn btn-danger") %>              
            </div>

          <% end %>

      
    </div>      
  </div>
</div>




  